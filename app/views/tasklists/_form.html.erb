<%= form_with(model: tasklist) do |form| %>
  <% if tasklist.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tasklist.errors.count, "error") %> prohibited this tasklist from being saved:</h2>

      <ul>
        <% tasklist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Task, style: "display: block" %>
    <%= form.text_field :task %>
  </div>

  <div>
    <%= form.label :Date, style: "display: block" %>
    <%= form.date_field :duedate %>
  </div>

  <div>
    <%= form.label :Status, style: "display: block" %>
    <%= form.select :status, options_for_select([["Select One", ""], "In Work", "Complete"]), :class => 'genForm_dropBox' %>
  </div>
<br/>
  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
