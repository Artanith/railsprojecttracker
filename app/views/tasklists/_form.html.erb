    <%= form.date_field :duedate, class:"form-control", placeholder: "Due Date" %>
  </div>
  <br/>
  <div class="form-group form-select">

    <%= form.select :status, options_for_select([["Select Status", ""], "In Work", "Complete"]), :class => 'genForm_dropBox form-control' %>
  </div>
<br/>

  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
